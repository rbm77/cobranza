@section Headers {
    <link href="~/css/tab-page.css" rel="stylesheet">
    <script src="~/js/qr_packed.js"></script>
}

@section Scripts {
    <script src="~/js/qrCodeScanner.js"></script>
    <script type="text/javascript">
        const cmbDegrees = document.getElementById('cmbDegrees');
        loadList(document.getElementById('cmbRoutes'), '../api/routes');
        loadList(document.getElementById('cmbZones'), '../api/zones');
        loadList(cmbDegrees, '../api/degrees');
        cmbDegrees.addEventListener('change', function () {
            loadList(document.getElementById('cmbGroups'), `../api/degrees/${cmbDegrees.value}/groups`);
        });
        qrScanner.callback = studentCode => {
            if (studentCode) {
                hideScanner();
                redirectTo(`../movements/new/${studentCode}`);
            }
        };
    </script>
}
